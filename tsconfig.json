{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["ES6"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
